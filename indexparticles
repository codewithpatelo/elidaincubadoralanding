    <script>
        // Mobile menu toggle
        document.getElementById('mobile-menu-button').addEventListener('click', function() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    // Close mobile menu if open
                    const mobileMenu = document.getElementById('mobile-menu');
                    if (!mobileMenu.classList.contains('hidden')) {
                        mobileMenu.classList.add('hidden');
                    }
                    
                    // Calculate position with offset for fixed header
                    const headerHeight = document.querySelector('nav').offsetHeight;
                    const elementPosition = targetElement.getBoundingClientRect().top;
                    const offsetPosition = elementPosition + window.pageYOffset - headerHeight;
                    
                    window.scrollTo({
                        top: offsetPosition,
                        behavior: 'smooth'
                    });
                }
            });
        });
        
        // Hero Fluid Particles Animation
        document.addEventListener('DOMContentLoaded', function() {
            const canvas = document.getElementById('hero-particles');
            const ctx = canvas.getContext('2d');
            let width, height;
            let particles = [];
            
            // Resize canvas to fill hero section
            function resizeCanvas() {
                const heroSection = canvas.parentElement;
                width = heroSection.offsetWidth;
                height = heroSection.offsetHeight;
                canvas.width = width;
                canvas.height = height;
                
                // Recreate particles when resizing
                createParticles();
            }
            
            // Create fluid particles
            function createParticles() {
                particles = [];
                const particleCount = Math.floor(width * height / 5000); // Higher density for hero
                
                for (let i = 0; i < particleCount; i++) {
                    particles.push({
                        x: Math.random() * width,
                        y: Math.random() * height,
                        radius: Math.random() * 10 + 5, // Larger particles
                        color: getGradientColor(Math.random()),
                        vx: Math.random() * 2 - 1, // Faster movement
                        vy: Math.random() * 2 - 1,
                        life: Math.random() * 200 + 100 // Longer life
                    });
                }
            }
            
            // Get a color from the gradient
            function getGradientColor(position) {
                // Green gradient colors (Elida brand colors) with higher opacity
                const colors = [
                    { r: 168, g: 224, b: 99, a: 0.6 }, // #A8E063 with high opacity
                    { r: 86, g: 171, b: 47, a: 0.8 }   // #56AB2F with high opacity
                ];
                
                const color1 = colors[0];
                const color2 = colors[1];
                
                const r = Math.floor(color1.r + position * (color2.r - color1.r));
                const g = Math.floor(color1.g + position * (color2.g - color1.g));
                const b = Math.floor(color1.b + position * (color2.b - color1.b));
                const a = color1.a + position * (color2.a - color1.a);
                
                return `rgba(${r}, ${g}, ${b}, ${a})`;
            }
            
            // Draw the scene
            function draw() {
                // Clear canvas with a gradient background
                const gradient = ctx.createLinearGradient(0, 0, width, height);
                gradient.addColorStop(0, 'rgba(168, 224, 99, 0.3)');
                gradient.addColorStop(1, 'rgba(86, 171, 47, 0.5)');
                ctx.fillStyle = gradient;
                ctx.fillRect(0, 0, width, height);
                
                // Update and draw particles
                particles.forEach((p, index) => {
                    // Update position
                    p.x += p.vx;
                    p.y += p.vy;
                    
                    // Slightly change velocity for fluid movement
                    p.vx += (Math.random() - 0.5) * 0.2;
                    p.vy += (Math.random() - 0.5) * 0.2;
                    
                    // Limit velocity
                    p.vx = Math.max(-2, Math.min(2, p.vx));
                    p.vy = Math.max(-2, Math.min(2, p.vy));
                    
                    // Decrease life
                    p.life--;
                    
                    // If particle dies, reset it
                    if (p.life <= 0 || p.x < 0 || p.x > width || p.y < 0 || p.y > height) {
                        p.x = Math.random() * width;
                        p.y = Math.random() * height;
                        p.vx = Math.random() * 2 - 1;
                        p.vy = Math.random() * 2 - 1;
                        p.life = Math.random() * 200 + 100;
                        p.color = getGradientColor(Math.random());
                    }
                    
                    // Draw particle
                    ctx.beginPath();
                    ctx.arc(p.x, p.y, p.radius, 0, Math.PI * 2);
                    ctx.fillStyle = p.color;
                    ctx.fill();
                    
                    // Connect nearby particles with lines
                    for (let j = index + 1; j < particles.length; j++) {
                        const p2 = particles[j];
                        const dx = p.x - p2.x;
                        const dy = p.y - p2.y;
                        const distance = Math.sqrt(dx * dx + dy * dy);
                        
                        if (distance < 200) { // Increased connection distance
                            ctx.beginPath();
                            ctx.moveTo(p.x, p.y);
                            ctx.lineTo(p2.x, p2.y);
                            ctx.strokeStyle = `rgba(255, 255, 255, ${0.4 * (1 - distance / 200)})`; // White connections
                            ctx.lineWidth = 1.5; // Thicker lines
                            ctx.stroke();
                        }
                    }
                });
                
                requestAnimationFrame(draw);
            }
            
            // Initialize
            window.addEventListener('resize', resizeCanvas);
            resizeCanvas();
            draw();
        });
    </script>
</body>
</html>